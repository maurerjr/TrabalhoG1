import java.util.ArrayList;
import java.util.Scanner;

public class Main {

	public static void main(String[] args) {
		Scanner tc = new Scanner(System.in);
		ArrayList<Clientes> cliente = new ArrayList<>();
		ArrayList<Chamados> chamado = new ArrayList<>();
		ArrayList<Tecnicos> tecnico = new ArrayList<>();
		ArrayList<Gerentes> gerente = new ArrayList<>();
		int op1; 
		int op2; 
		int contchamados = 0;
			
		
		do{
			System.out.println("1 - Cliente\n 2 - Tecnico\n 3 - Gerente\n  0 - Sair");
					
			op1 = tc.nextInt();
			switch (op1) {
			case 1:{ //               CLIENTE
				do{
					System.out.println("\n\n 1 - Cadastrar chamados\n  2 - Ver chamados\n 3 - Editar chamados\n 0 - Voltar\n");
							
					op2 = tc.nextInt();
					switch (op2) {
					case 1:{
						Chamados c = new Chamados();
						contchamados++;
						c.lerChamado(contchamados);
						chamado.add(c);
						break;
					}						
					case 2:{
						Chamados c = new Chamados();
						for (int i = 0; i < chamado.size(); i++) {
							c=chamado.get(i);
							c.mostrarChamado();
						}
						break;
					}
					
					case 3:{
						Chamados c = new Chamados();
						System.out.println("Qual chamado quer modificar: ");
						int modChamados = tc.nextInt();
						chamado.set(modChamados-1, c.modificarChamado());
						
						break;
					}	
					default:
						break;
					}
				}while(op2!=0);
				break;
			}
			
			case 2:{//   TECNICO 
				do {
					System.out.println("\n \n 1 - Ver tarefas pendentes\n 2 - Ver tarefas realizadas\n 3 - Finalizar tarefas\n 0 - Voltar\n");
					op2=tc.nextInt();
					switch (op2) {
					case 1:{
						
					break;	
					}					
					default:
						System.out.println("OPÇÃO INVALIDA.");
						break;
					}
				} while (op2!=0);
			break;
			}
					
			case 3:{ //  GERENTE 
				do{
					System.out.println("\n\n 1 - Cadastrar Cliente\n 2 - Mostrar Clientes\n 3 - Ver tarefas pendentes\n 4 - Ver tarefas realizadas 5 - Finalizar tarefas\n 6 - Cadastra Gerente\n 7 - Mostrar Gerentes\n0 - Voltar\n ");
							
					op2=tc.nextInt();
					switch (op2) {
					case 1:{
						Clientes c = new Clientes();
						c.ler();
						cliente.add(c);
						break;
					}
					case 2:{
						Clientes c = new Clientes();
						for (int i = 0; i < cliente.size(); i++) {
							c=cliente.get(i);
							
							c.mostrar();
						}
					break;
					}
					case 3:{
						Chamados c = new Chamados();
						for (int i = 0; i < chamado.size(); i++) {
							c.mostrarChamado();
						}
						break;
					}
					case 6:{
						Gerentes g = new Gerentes();
						g.cadastraGerente();
						gerente.add(g);
						break;
					}
					case 7:{
						Gerentes g = new Gerentes();
						for (int i = 0; i < gerente.size(); i++) {
							g=gerente.get(i);
							g.mostraGerente();
						}
						break;	
					}
					default:
						System.out.println("OPÇÃO INVALIDA.");
						break;
					}
					}while (op2!=0);
				break;
			}
			
			
			
			case 0:
				
				break;
			
		
			}
		}while(op1!=0);
	tc.close();
	}	

}