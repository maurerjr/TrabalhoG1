import java.util.ArrayList;
import java.util.Scanner;

public class Main {

	public static void main(String[] args) {
		Scanner tc = new Scanner(System.in);
		ArrayList<Clientes> cliente = new ArrayList<>();
		ArrayList<Chamados> chamado = new ArrayList<>();
		ArrayList<Tecnicos> tecnico = new ArrayList<>();
		ArrayList<Gerentes> gerente = new ArrayList<>();
		int opi; //verifica o operador inicial para ver se é cliente, gerente ou tecnico.
		int opf; //verifica o operador de cada area para selecionar a opção.
		int contchamados = 0;
			
		
		do{
			System.out.println("1 - Cliente\n"
					+ "2 - Tecnico\n"
					+ "3 - Gerente\n"
					+ "0 - Sair");
			opi = tc.nextInt();
			switch (opi) {
			case 1:{ //---------------- CLIENTE ---------------------
				do{
					System.out.println("---------------------\n"
							+ "1 - Cadastrar chamados\n"
							+ "2 - Ver chamados\n"
							+ "3 - Editar chamados\n"
							+ "0 - Voltar\n"
							+ "---------------------");
					opf = tc.nextInt();
					switch (opf) {
					case 1:{
						Chamados c = new Chamados();
						contchamados++;
						c.lerChamado(contchamados);
						chamado.add(c);
						break;
					}						
					case 2:{
						Chamados c = new Chamados();
						for (int i = 0; i < chamado.size(); i++) {
							c=chamado.get(i);
							System.out.println("---------------------------");
							c.mostrarChamado();
							System.out.println("---------------------------");
						}
						break;
					}
					
					case 3:{
						Chamados c = new Chamados();
						System.out.println("Qual chamado quer modificar: ");
						int modificachamado = tc.nextInt();
						chamado.set(modificachamado-1, c.modificarChamado());
						
						break;
					}	
					default:
						break;
					}
				}while(opf!=0);
				break;
			}
			
			case 2:{//---------------------------- TECNICO ----------------------------
				do {
					System.out.println("---------------------\n"
							+ "1 - Ver tarefas pendentes\n"
							+ "2 - Ver tarefas realizadas\n"
							+ "3 - Finalizar tarefas\n"
							+ "0 - Voltar\n"
							+ "---------------------");
					opf=tc.nextInt();
					switch (opf) {
					case 1:{
						
					break;	
					}					
					default:
						System.out.println("OPÇÃO INVALIDA.");
						break;
					}
				} while (opf!=0);
			break;
			}
					
			case 3:{ // -------------------- GERENTE ---------------------------
				do{
					System.out.println("---------------------\n"
							+ "1 - Cadastrar Cliente\n"
							+ "2 - Mostrar Clientes\n"
							+ "3 - Ver tarefas pendentes\n"
							+ "4 - Ver tarefas realizadas"
							+ "5 - Finalizar tarefas\n"
							+ "6 - Cadastra Gerente\n"
							+ "7 - Mostra Gerentes\n"
							+ "0 - Voltar\n"
							+ "---------------------");
					opf=tc.nextInt();
					switch (opf) {
					case 1:{
						Clientes c = new Clientes();
						c.ler();
						cliente.add(c);
						break;
					}
					case 2:{
						Clientes c = new Clientes();
						for (int i = 0; i < cliente.size(); i++) {
							c=cliente.get(i);
							System.out.println("---------------------------");
							c.mostrar();
							System.out.println("---------------------------");
						}
					break;
					}
					case 3:{
						Chamados c = new Chamados();
						for (int i = 0; i < chamado.size(); i++) {
							System.out.println("---------------------------");
							c.mostrarChamado();
							System.out.println("---------------------------");
						}
						break;
					}
					case 6:{
						Gerentes g = new Gerentes();
						g.cadastraGerente();
						gerente.add(g);
						break;
					}
					case 7:{
						Gerentes g = new Gerentes();
						for (int i = 0; i < gerente.size(); i++) {
							g=gerente.get(i);
							System.out.println("---------------------------");
							g.mostraGerente();
							System.out.println("---------------------------");
						}
						break;	
					}
					default:
						System.out.println("OPÇÃO INVALIDA.");
						break;
					}
					}while (opf!=0);
				break;
			}
			
			
			
			case 0:{
				System.out.println("Adeus mundo cruel.");
				break;
			}
			
			
			
			default:
				System.out.println("OPÇÃO INVALIDA.");
				break;
			}
		}while(opi!=0);
	tc.close();
	}	

}